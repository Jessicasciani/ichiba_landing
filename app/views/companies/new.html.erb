<div class="container">
  <%= image_tag "step2.png", class: "stepbar" %>
  <div class="form">
    <%= simple_form_for @company do |f| %>
      <%= f.error_notification %>
      <%= f.input :company_name, label: false, placeholder: t("company"), input_html: { class: "input-form" } %>
      <%= f.input :accounting_software, prompt: t("accounting"), collection: ["Truc", "Truc autre"], label: false, input_html: { class: "input-form" } %>
      <%= f.input :bank, label: false , collection: ["Qonta", "Starling"], prompt: t("bank"), label: false, input_html: { class: "input-form" }%>
      <%= f.input :payment, collection: ["Truc", "Truc autre"], prompt: t("payment"), label: false, input_html: { class: "input-form" } %>
      <%= f.submit t("next"), class: "btn-check" %>
    <% end %>
  </div>
</div>
