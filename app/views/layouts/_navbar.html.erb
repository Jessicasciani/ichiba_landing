<nav class="navbar">
  <%= image_tag "ichibalogo.svg", class: "logo" %>
</nav>

<script>
  const navbar = document.querySelector('.navbar');
  if (navbar) {
    window.addEventListener('scroll', () => {
      if (window.scrollY >= 200) {
        navbar.classList.add('navbar-effect-home');
      } else {
        navbar.classList.remove('navbar-effect-home');
      }
    });
  }
</script>
