<nav class="navbar">
  <%= image_tag "ichibalogo.png", class: "logo" %>
  <div>
    <%= link_to 'EN', root_path(locale: :en) %>
    <%= link_to 'FR', root_path(locale: :fr) %>
  </div>
</nav>

<script>
  const navbar = document.querySelector('.navbar');
  if (navbar) {
    window.addEventListener('scroll', () => {
      if (window.scrollY >= 100) {
        navbar.classList.add('navbar-effect-home');
      } else {
        navbar.classList.remove('navbar-effect-home');
      }
    });
  }
</script>
