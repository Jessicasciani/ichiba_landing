<%= render "layouts/navbar" %>
<div class="first-screen">
  <div class="header">
    <h1><%= t("header_line") %></h1>
    <p><%= t("small_header") %></p>
    <p class="btn-check"><%= link_to t("check"), new_user_registration_path %></p>
    <p id="powered">Service powered by <a href="https://www.credendo.com/fr"><%= image_tag "credendo.png" %></a></p>
  </div>
  <%= image_tag "background_home.png" %>
</div>

<div class="container">

  <h2 class="text-center"><%= t("scoring") %></h2>

  <div class="cards">
    <div class="card">
      <%= image_tag "one.png", class: "number" %>
      <p><%= t("first") %></p>
    </div>
    <div class="card">
      <%= image_tag "two.png", class: "number" %>
      <p><%= t("second") %></p>
    </div>
    <div class="card">
      <%= image_tag "three.png", class: "number" %>
      <p><%= t("third") %></p>
    </div>
  </div>

  <p class="btn-check m-auto"><%= link_to t("check"), new_user_registration_path %></p>


  <h2 class="text-center title"><%= t("why") %></h2>
  <p class="text-center"><%= t("why_text") %></p>
  <div class="boxes">

    <div class="box">
      <div>
        <%= image_tag "data.png" %>
        <div class="text">
          <h3><%= t("box_one") %></h3>
          <p><%= t("text_one") %></p>
        </div>
      </div>
    </div>

    <div class="box">
      <div>
        <%= image_tag "lock.png" %>
        <div class="text">
          <h3><%= t("box_two") %></h3>
          <p><%= t("text_two") %></p>
        </div>
      </div>
    </div>

    <div class="box">
      <div>
        <%= image_tag "ondemand.png" %>
        <div class="text">
          <h3><%= t("box_three") %></h3>
          <p><%= t("text_three") %></p>
        </div>
      </div>
    </div>


    <div class="box">
      <div>
        <%= image_tag "graph.png" %>
        <div class="text">
          <h3><%= t("box_four") %></h3>
          <p><%= t("text_four") %></p>
        </div>
      </div>
    </div>

    <div class="box">
      <div>
        <%= image_tag "clock.png" %>
        <div class="text">
          <h3><%= t("box_five") %></h3>
          <p><%= t("text_five") %></p>
        </div>
      </div>
    </div>

    <div class="box">
        <div>
        <%= image_tag "score.png" %>
        <div class="text">
          <h3><%= t("box_six") %></h3>
          <p><%= t("text_six") %></p>
        </div>
      </div>
    </div>
  </div>

  <h2 class="text-center title"><%= t("support") %></h2>
  <div class="logos">
    <a href="https://www.horizon2020.gouv.fr/" target="_blank"><%= image_tag "partner1.png", class: "logo-partner" %></a>
    <a href="https://www.credendo.com/" target="_blank"><%= image_tag "partner2.png", class: "logo-partner" %></a>
    <a href="https://area42.tech/" target="_blank"><%= image_tag "partner3.png", class: "logo-partner" %></a>
  </div>

</div>


